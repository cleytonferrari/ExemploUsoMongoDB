<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

    <style type="text/css">
        body {
            padding-top: 75px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="javascript:;">Projeto Beta</a>

                <div class="btn-group pull-right">
                    <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                        <i class="icon-user"></i>Cleyton Ferrari
                            <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:;">Perfil</a></li>
                        <li class="divider"></li>
                        <li><a href="javascript:;">Sair</a></li>
                    </ul>
                </div>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li class="active"><a href="javascript:;">Home</a></li>
                        <li><a href="javascript:;">Administrativo</a></li>
                        <li><a href="javascript:;">Cadastro</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; Projeto Beta 2012</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/bootstrap-typeahead.js"></script>
    <script src="~/Scripts/bootstrap-alert.js"></script>
    <script src="~/Scripts/bootstrap-button.js"></script>
    <script src="~/Scripts/bootstrap-carousel.js"></script>
    <script src="~/Scripts/bootstrap-collapse.js"></script>
    <script src="~/Scripts/bootstrap-dropdown.js"></script>
    <script src="~/Scripts/bootstrap-modal.js"></script>
    <script src="~/Scripts/bootstrap-popover.js"></script>
    <script src="~/Scripts/bootstrap-scrollspy.js"></script>
    <script src="~/Scripts/bootstrap-tab.js"></script>
    <script src="~/Scripts/bootstrap-tooltip.js"></script>
    <script src="~/Scripts/bootstrap-transition.js"></script>
</body>
</html>
