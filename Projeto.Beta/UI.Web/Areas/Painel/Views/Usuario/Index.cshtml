@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/app/painel/UsuarioViewModel.js"></script>

<div class="row-fluid">
    @Html.Partial("_MenuAdministrativo")
    <div class="span9">
        <div class="span12" style="margin-left: 15px">
            <form>
                <div class="span12">
                    <div class="span3">
                        <select class="span12">
                            <option>Nome</option>
                            <option>Login</option>
                        </select>
                    </div>
                    <div class="span9 input-append">
                        <input class="span9" id="appendedInputButtons" type="text">
                        <button class="btn" type="button">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="span12">

            <div class="alert alert-info">
                Foram encontrados os seguintes registros
            </div>

            <table class="table table-condensed table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Login</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="span6">Cleyton Ferrari</td>
                        <td class="span4">cleyton</td>
                        <td class="span2"><a href="">Selecionar</a></td>
                    </tr>
                    <tr>
                        <td class="span6">Cleyton Ferrari</td>
                        <td class="span4">cleyton</td>
                        <td class="span2"><a href="">Selecionar</a></td>
                    </tr>
                    <tr>
                        <td class="span6">Cleyton Ferrari</td>
                        <td class="span4">cleyton</td>
                        <td class="span2"><a href="">Selecionar</a></td>
                    </tr>
                    <tr>
                        <td class="span6">Cleyton Ferrari</td>
                        <td class="span4">cleyton</td>
                        <td class="span2"><a href="">Selecionar</a></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span12">
            <form>
                <legend>Cadastro de grupo de usuários</legend>
                <div class="span12">
                    <div class="span7">
                        <label for="">Nome de usuário</label>
                        <input class="span12" type="text" data-bind="value: nome" placeholder="Digite o nome completo do usuário">
                    </div>
                    <div class="span5">
                        <label for="">Login</label>
                        <input class="span12" type="text" data-bind="value: login" placeholder="Login para acessar o sistema">
                    </div>
                </div>
                <div class="span12">
                    <div class="span5">
                        <label for="">Senha</label>
                        <input class="span12" type="password">
                    </div>
                    <div class="span5">
                        <label for="">Confirmar Senha</label>
                        <input class="span12" type="password">
                    </div>
                </div>
                <div class="span12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>

</div>
